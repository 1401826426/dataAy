<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:context="http://www.springframework.org/schema/context"
		xmlns:mvc="http://www.springframework.org/schema/mvc"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
				http://www.springframework.org/schema/context
				http://www.springframework.org/schema/context/spring-context-4.0.xsd
				http://www.springframework.org/schema/mvc
				http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">
				
	<context:component-scan base-package="com.fei.manager.controller"></context:component-scan>
				
	<mvc:annotation-driven/>
	
	<bean class = "org.springframework.web.servlet.view.InternalResourceViewResolver">
	    <property name = "prefix" value = "/WEB-INF/templates/"/>
	    <property name="suffix" value = ".html"/>
	</bean>
	
	<mvc:resources mapping="/WEB-INF/**" location="/WEB-INF/"/> 
    
    <mvc:resources mapping="/**/*.html" location="/WEB-INF/"/>
    <mvc:resources mapping="/**/*.js" location="/WEB-INF/"/>
    <mvc:resources mapping="/**/*.css" location="/WEB-INF/"/>
    <mvc:resources mapping="/**/*.png" location="/WEB-INF/"/>
    <mvc:resources mapping="/**/*.gif" location="/WEB-INF/"/>
    <mvc:resources mapping="/**/*.jpg" location="/WEB-INF/"/>
	
	
	<mvc:interceptors>
	 <mvc:interceptor>
	    <mvc:mapping path="/**"/>
	    <mvc:exclude-mapping path="/user/**"/>
	    <mvc:exclude-mapping path="/test"/>
	    <bean class="com.fei.manager.plugin.auth.AuthInterceptor"/>
	 </mvc:interceptor>
	</mvc:interceptors>
	
	<bean class="com.fei.manager.plugin.auth.module.HandlerMethodModuleParser" />
	
	<!-- <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		最大5MB
		<property name="maxUploadSize" value="5242880"/>
	</bean> -->
	
</beans>


