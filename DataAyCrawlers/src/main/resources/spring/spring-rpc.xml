<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
				http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
				http://www.springframework.org/schema/context
				http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<bean id="rpcInterfaceFactory" class="com.fei.common.rpc.framework.RpcInterfaceFactory"/>


    <!-- MapperAnnotationBuilder -->
    <!-- 在configuration中进行了注册mapperType的操作时MapperAnnotationBuilder会扫描当前mapper接口对应的相同路径下的相同名的xml文件 -->
    <!-- 并将对应的MapperStatement中,从而能够自动注册mappers \ -->
	<bean class="com.fei.common.rpc.framework.spring.scanner.RpcInterfaceConfigure">
		<property name="basePackages" value="com.fei.common.rpc.api" />
		<property name="rpcInterfaceFactory" ref="rpcInterfaceFactory"/>
	</bean>

	
</beans>